{
"compileOnSave": true,
"compilerOptions": {
  "target": "ES6",
  "lib": ["dom", "dom.iterable", "esnext"],
  "allowJs": true,
  "skipLibCheck": true,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "noFallthroughCasesInSwitch": true,
  "module": "ESNext",
  "outDir": "dist",
  "rootDir": "src"
},
"include": ["src/**/*"],
"exclude": ["node_modules"]
}